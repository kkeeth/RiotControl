<item-detail>
  <div class="item-detail" if={ props.item || true }>
    <h3>Item Details</h3>
    <div><b class="label">ID:</b> { props.item.id }</div>
    <div><b class="label">Name:</b> { props.item.title }</div>
  </div>

  <style>
    .item-detail {
      padding: 1rem 0;
    }

    .label {
      margin-right: 1rem;
    }
  </style>
</item-detail>
